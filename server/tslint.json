{
	"lintOptions": {
		"typeCheck": true
	},
	"extends": ["tslint:all"],
	"rules": {
		// Don't want these
		"linebreak-style": false,
		"file-name-casing": false,
		"no-default-export": false,
		// TODO: Enable stricter options for these
		"comment-format": [true, "check-space"],
		"member-access": true,
		"only-arrow-functions": [
			true,
			"allow-declarations",
			"allow-named-functions"
		]
	}
}
